<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/bg_activity_card"
    android:layout_marginBottom="12dp"
    android:elevation="4dp">

    <!-- Icon minh họa -->
    <ImageView
        android:id="@+id/imgActivityIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_notification_default"
        android:scaleType="fitCenter" />

    <!-- Nội dung thông báo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtActivityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhắc uống nước"
            android:textColor="#222222"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtActivityContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã đến lúc bổ sung 300ml nước."
            android:textColor="#222222"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtActivityTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00 06/06"
            android:textColor="#777777"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
