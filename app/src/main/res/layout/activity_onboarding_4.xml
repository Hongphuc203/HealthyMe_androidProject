<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="#FFFFFF"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<ScrollView 
		android:id="@+id/r3vzeyh3pu6f"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@drawable/cr40bffffff">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/rswpi5fthpf"
				android:layout_width="match_parent"
				android:layout_height="422dp"
				android:layout_marginBottom="48dp"
				android:src="@mipmap/ic_launcher"
				android:scaleType="fitXY"
			/>
			<LinearLayout
				android:id="@+id/r0dliscba0m0b"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="92dp"
				android:layout_marginHorizontal="30dp"
				android:orientation="vertical">
				<TextView
					android:id="@+id/rwk3vxo6nvsg"
					android:textColor="#1D1517"
					android:textSize="24sp"
					android:textStyle="bold"
					android:layout_marginBottom="15dp"
					android:layout_height="wrap_content"
					android:layout_width="175dp"
					android:text="Improve Sleep  Quality"
				/>
				<TextView
					android:id="@+id/ruyrv53c93o9"
					android:textColor="#B6B4C1"
					android:textSize="14sp"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:text="Improve the quality of your sleep with us, good quality sleep can bring a good mood in the morning"
				/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/r89btb15lhok"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="end"
				android:layout_marginBottom="40dp"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/r7g2ppca0l3y"
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:layout_marginEnd="30dp"
					android:src="@mipmap/ic_launcher"
					android:scaleType="fitXY"
				/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
