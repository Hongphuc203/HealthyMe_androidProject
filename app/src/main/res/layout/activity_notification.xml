<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="#FFFFFF"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<ScrollView
		android:id="@+id/rdofq0b66jgo"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@drawable/cr40bffffff">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/r0z8l4g03gyb"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:layout_marginTop="40dp"
				android:layout_marginBottom="30dp"
				android:layout_marginHorizontal="30dp"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/btnNotiBack"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/cr8bf7f8f8"
					android:paddingVertical="11dp"
					android:paddingHorizontal="13dp"
					android:layout_marginEnd="77dp"
					android:clickable="true"
					android:focusable="true"
					android:orientation="vertical">
					<ImageView
						android:id="@+id/r1mz030ntwl3"
						android:layout_width="4dp"
						android:layout_height="9dp"
						android:src="@mipmap/ic_launcher"
						android:scaleType="fitXY"
					/>
				</LinearLayout>
				<TextView
					android:id="@+id/ro16a7nyup0s"
					android:textColor="#1D1517"
					android:textSize="16sp"
					android:textStyle="bold"
					android:layout_marginBottom="1dp"
					android:layout_marginEnd="12dp"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_weight="1"
					android:text="Notification"
				/>

				<LinearLayout
					android:id="@+id/btnDetailNoti"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/cr8bf7f8f8"
					android:clickable="true"
					android:focusable="true"
					android:orientation="vertical"
					android:paddingHorizontal="11dp"
					android:paddingVertical="14dp">

					<com.google.android.material.imageview.ShapeableImageView
						android:id="@+id/rvzvg1jq7tdf"
						android:layout_width="10dp"
						android:layout_height="4dp"
						android:scaleType="fitXY"
						android:src="@mipmap/ic_launcher" />
				</LinearLayout>
			</LinearLayout>

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/recyclerNotification"
				android:layout_width="387dp"
				android:layout_height="555dp"
				android:layout_marginTop="12dp"
				android:paddingHorizontal="16dp" />

		</LinearLayout>
	</ScrollView>
</LinearLayout>
