<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		android:id="@+id/rt5mb8kwxw5i"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@drawable/cr20bffffff">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/rqljh6y35vm"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="30dp"
				android:layout_marginTop="40dp"
				android:layout_marginBottom="30dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<LinearLayout
					android:id="@+id/rgslgk4ujki"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginEnd="12dp"
					android:layout_weight="1"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="5dp"
						android:text="Welcome Back,"
						android:textColor="#A5A3AF"
						android:textSize="12sp" />

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content" />

					<TextView
						android:id="@+id/txtFullName"
						android:layout_width="match_parent"
						android:layout_height="45dp"
						android:layout_weight="1"
						android:background="@null"
						android:text=""
						android:textColor="#1D1517"
						android:textSize="20sp"
						android:textStyle="bold" />
				</LinearLayout>

				<LinearLayout
					android:id="@+id/btnNotification"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/cr8bf7f8f8"
					android:clickable="true"
					android:focusable="true"
					android:orientation="vertical"
					android:padding="11dp"
					tools:ignore="SpeakableTextPresentCheck">

					<com.google.android.material.imageview.ShapeableImageView
						android:id="@+id/iconNotification"
						android:layout_width="24dp"
						android:layout_height="25dp"
						android:scaleType="fitXY"
						android:src="@mipmap/ic_launcher" />
				</LinearLayout>
			</LinearLayout>

			<RelativeLayout
				android:id="@+id/r2d1hf7v3umi_rl"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="30dp"
				android:layout_marginTop="12dp"
				android:layout_marginBottom="12dp">

				<com.google.android.material.imageview.ShapeableImageView
					android:id="@+id/r2d1hf7v3umi"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:scaleType="fitXY"
					android:src="@drawable/bannerbackground" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="center"
					android:orientation="horizontal"
					android:paddingHorizontal="20dp"
					android:paddingTop="19dp"
					android:paddingBottom="8dp"
					android:src="@drawable/bannerbackground">

					<LinearLayout
						android:id="@+id/ro2nk1v92v4k"
						android:layout_width="180dp"
						android:layout_height="wrap_content"
						android:layout_marginVertical="6dp"
						android:layout_marginEnd="19dp"
						android:orientation="vertical">

						<LinearLayout
							android:id="@+id/rwrlg9h7o8mf"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginBottom="15dp"
							android:orientation="vertical">

							<TextView
								android:id="@+id/r7munhrqgc5b"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="5dp"
								android:layout_weight="1"
								android:text="BMI  (Body Mass Index)"
								android:textColor="#FFFFFF"
								android:textSize="14sp"
								android:textStyle="bold" />

							<TextView
								android:id="@+id/txtBMI"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text=""
								android:textColor="#FFFFFF"
								android:textSize="12sp" />
						</LinearLayout>

						<LinearLayout
							android:id="@+id/btnViewMore"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/cr50lr495cc8fed6b50f6"
							android:clickable="true"
							android:focusable="true"
							android:orientation="vertical"
							android:paddingHorizontal="21dp"
							android:paddingVertical="10dp">

							<TextView
								android:id="@+id/rciyn2ylrubj"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="View More"
								android:textColor="#FFFFFF"
								android:textSize="10sp"
								android:textStyle="bold" />
						</LinearLayout>
					</LinearLayout>

					<com.github.mikephil.charting.charts.PieChart
						android:id="@+id/bmiPieChart"
						android:layout_width="100dp"
						android:layout_height="match_parent"
						android:layout_marginStart="8dp"
						android:paddingLeft="2dp" />
				</LinearLayout>
			</RelativeLayout>

			<LinearLayout
				android:id="@+id/ro9a4kozafy"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="30dp"
				android:layout_marginBottom="30dp"
				android:background="@drawable/rectangle"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:paddingHorizontal="20dp"
				android:paddingVertical="15dp">

				<TextView
					android:id="@+id/rx419djg29l8"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="@null"
					android:inputType="text"
					android:paddingVertical="3dp"
					android:text="Today Target"
					android:textColor="@color/black"
					android:textSize="16sp"
					android:textStyle="bold" />

				<LinearLayout
					android:id="@+id/btnCheck"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/cr50lr495cc8fed6b50f6"
					android:orientation="vertical"
					android:paddingHorizontal="15dp"
					android:paddingTop="5dp"
					android:paddingBottom="6dp">

					<TextView
						android:id="@+id/rkkc7kpd9kqg"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Check"
						android:textColor="#FFFFFF"
						android:textSize="12sp" />
				</LinearLayout>
			</LinearLayout>

			<TextView
				android:id="@+id/re4yyzlkdsev"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="30dp"
				android:layout_marginBottom="15dp"
				android:text="Activity Status"
				android:textColor="#1D1517"
				android:textSize="16sp"
				android:textStyle="bold" />

			<androidx.cardview.widget.CardView
				android:id="@+id/musicCard"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="30dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				app:cardCornerRadius="30dp"
				app:cardElevation="12dp"
				>
				<FrameLayout
					android:id="@+id/musicCardContainer"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">

						<LinearLayout
							android:id="@+id/InforSong"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							android:paddingHorizontal="20dp"
							android:paddingVertical="15dp"
							android:gravity="center_vertical">

							<!-- Ảnh album -->
							<ImageView
								android:id="@+id/ivAlbumArt"
								android:layout_width="100dp"
								android:layout_height="100dp"
								android:layout_marginEnd="16dp"
								android:background="@drawable/bg_album_round"
								android:scaleType="centerCrop"
								android:src="@drawable/ic_launcher_foreground" />

							<!-- Thông tin bài hát -->
							<LinearLayout
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:orientation="vertical"
								android:paddingLeft="10dp">

								<TextView
									android:id="@+id/tvNowPlaying"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="Now Playing"
									android:textColor="#B5B7CC"
									android:textSize="10sp"
									android:textStyle="bold" />

								<TextView
									android:id="@+id/tvSongName"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginTop="4dp"
									android:text="Purple Haze"
									android:textColor="#C050F6"
									android:textSize="16sp"
									android:textStyle="bold" />

								<TextView
									android:id="@+id/tvSongSinger"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginTop="4dp"
									android:layout_marginBottom="10dp"
									android:text="Andy"
									android:textColor="#A58CAF"
									android:textSize="14sp"
									android:textStyle="bold" />
							</LinearLayout>

							<!-- Nút chọn bài hát 🎵 -->
							<Button
								android:id="@+id/btnChooseSong"
								android:layout_width="15dp"
								android:layout_height="15dp"
								android:layout_marginStart="10dp"
								android:background="@drawable/queue"
								android:elevation="4dp" />
						</LinearLayout>

						<LinearLayout
							android:id="@+id/ControlSing"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical">>

							<SeekBar
								android:id="@+id/seekBar"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginLeft="10dp"
								android:layout_marginTop="0dp"
								android:layout_marginRight="10dp"
								android:progressTint="#B46CFD"
								android:thumbTint="#8A00E5" />

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="2dp"
								android:layout_marginBottom="0dp"
								android:orientation="horizontal"
								android:paddingHorizontal="16dp">

								<TextView
									android:id="@+id/tvCurrentTime"
									android:layout_width="0dp"
									android:layout_height="wrap_content"
									android:layout_weight="1"
									android:text="00:00"
									android:textColor="#555555"
									android:textSize="12sp" />

								<TextView
									android:id="@+id/tvTotalDuration"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="03:30"
									android:textColor="#555555"
									android:textSize="12sp" />
							</LinearLayout>


							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="0dp"
								android:gravity="center"
								android:orientation="horizontal">

								<ImageButton
									android:id="@+id/btnPrev"
									android:layout_width="48dp"
									android:layout_height="48dp"
									android:background="@drawable/pre_song"
									android:src="@drawable/ic_prev" />

								<ImageButton
									android:id="@+id/btnPlayPause"
									android:layout_width="60dp"
									android:layout_height="64dp"
									android:layout_marginStart="24dp"
									android:layout_marginEnd="24dp"
									android:background="@drawable/play_song"
									android:src="@drawable/ic_prev" />

								<ImageButton
									android:id="@+id/btnNext"
									android:layout_width="48dp"
									android:layout_height="48dp"
									android:background="@drawable/next_song"
									android:src="@drawable/ic_prev" />
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>
				</FrameLayout>
			</androidx.cardview.widget.CardView>
			<LinearLayout
				android:id="@+id/Statitis"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:orientation="horizontal"
				android:weightSum="2">

				<!-- Card 1: Water Intake -->
				<androidx.cardview.widget.CardView
					android:layout_width="0dp"
					android:layout_height="150dp"
					android:layout_weight="1"
					android:layout_marginEnd="8dp"
					android:layout_marginStart="30dp"
					app:cardCornerRadius="16dp"
					app:cardElevation="8dp"
					android:backgroundTint="#F9DEFD"
					android:padding="0dp">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="horizontal"
						android:padding="20dp">

						<com.github.mikephil.charting.charts.BarChart
							android:id="@+id/singleBarChart"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_marginEnd="8dp"
							android:layout_weight="1" />

						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:orientation="vertical">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Water Intake"
								android:textColor="#1C242A"
								android:textSize="12sp"
								android:textStyle="bold" />

							<TextView
								android:id="@+id/txtLiters"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text=""
								android:textColor="#C050F6"
								android:textSize="14sp"
								android:textStyle="bold" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Real time updates"
								android:textColor="#B6B4C1"
								android:textSize="10sp" />

							<TextView
								android:id="@+id/txtTime"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text=""
								android:textColor="#A5A3AF"
								android:textSize="8sp" />

							<TextView
								android:id="@+id/txtMl"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text=""
								android:textColor="#C050F6"
								android:textSize="8sp"
								android:textStyle="bold" />
						</LinearLayout>
					</LinearLayout>
				</androidx.cardview.widget.CardView>

				<!-- Card 2: Sleep -->
				<androidx.cardview.widget.CardView
					android:id="@+id/ViewSleepTracker"
					android:layout_width="0dp"
					android:layout_height="150dp"
					android:layout_weight="1"
					android:layout_marginStart="8dp"
					app:cardCornerRadius="16dp"
					app:cardElevation="8dp"
					android:layout_marginEnd="30dp"
					android:backgroundTint="@android:color/white">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:padding="0dp">

						<TextView
							android:paddingTop="20dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Sleep"
							android:textColor="#1D1517"
							android:textSize="12sp"
							android:paddingHorizontal="20dp"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/txtSleepHome"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="8h 20m"
							android:textColor="#00FF66"
							android:textSize="14sp"
							android:paddingHorizontal="20dp"
							android:textStyle="bold" />

						<ImageView
							android:layout_width="match_parent"
							android:layout_height="0dp"
							android:layout_weight="1"
							android:scaleType="fitXY"
							android:src="@drawable/sleep" />
					</LinearLayout>
				</androidx.cardview.widget.CardView>
			</LinearLayout>


		</LinearLayout>
	</ScrollView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/cr20bffffff"
		android:elevation="80dp"
		android:orientation="horizontal"
		android:paddingHorizontal="32dp"
		android:paddingVertical="28dp">

		<ImageView
			android:id="@+id/iconHome"
			android:layout_width="24dp"
			android:layout_height="31dp"
			android:clickable="true"
			android:focusable="true"
			android:layout_marginEnd="95dp"
			android:scaleType="fitXY"
			android:src="@mipmap/ic_launcher" />

		<ImageView
			android:id="@+id/iconWorkOut"
			android:layout_width="19dp"
			android:layout_height="19dp"
			android:clickable="true"
			android:focusable="true"
			android:layout_marginEnd="95dp"
			android:scaleType="fitXY"
			android:src="@mipmap/ic_launcher" />

		<ImageView
			android:id="@+id/iconCamera"
			android:layout_width="18dp"
			android:layout_height="16dp"
			android:clickable="true"
			android:focusable="true"
			android:layout_marginVertical="3dp"
			android:layout_marginEnd="75dp"
			android:scaleType="fitXY"
			android:src="@mipmap/ic_launcher" />

		<ImageView
			android:id="@+id/iconProfile"
			android:layout_width="14dp"
			android:layout_height="18dp"
			android:clickable="true"
			android:focusable="true"
			android:layout_marginHorizontal="4dp"
			android:layout_marginVertical="2dp"
			android:scaleType="fitXY"
			android:src="@mipmap/ic_launcher" />
	</LinearLayout>
</LinearLayout>
