<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/cr40bffffff"
        android:gravity="center_horizontal"
        android:paddingHorizontal="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/r8jjdf31sy0w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/r6nrk4ctiu9r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Hey there,"
                    android:textColor="#1D1517"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/rmb4oo2e4q9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create an Account"
                    android:textColor="#1D1517"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rcbjxqgt4f67"
                android:layout_width="match_parent"
                android:layout_height="324dp"
                android:layout_marginBottom="100dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/NewFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/sf7f8f8sw1cr14bf7f8f8"
                    android:orientation="horizontal"
                    android:paddingVertical="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="3dp">

                    <ImageView
                        android:id="@+id/profileIcon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />

                    <EditText
                        android:id="@+id/edtNewFullName"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Full Name"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/NewPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/sf7f8f8sw1cr14bf7f8f8"
                    android:orientation="horizontal"
                    android:paddingVertical="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="3dp">

                    <ImageView
                        android:id="@+id/phoneIcon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />

                    <EditText
                        android:id="@+id/edtNewPhoneNumber"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Phone Number"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/NewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/sf7f8f8sw1cr14bf7f8f8"
                    android:orientation="horizontal"
                    android:paddingVertical="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="3dp">

                    <ImageView
                        android:id="@+id/emailIcon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />

                    <EditText
                        android:id="@+id/edtNewEmail"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Email"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/NewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/sf7f8f8sw1cr14bf7f8f8"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <LinearLayout
                        android:id="@+id/txtViewNewPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="3dp">

                        <ImageView
                            android:id="@+id/lockIcon"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_launcher" />

                        <EditText
                            android:id="@+id/edtNewPassword"
                            android:layout_width="265dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/hideIcon"
                        android:layout_width="20dp"
                        android:layout_height="19dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/visibility_off" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/PrivacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="6dp">

                    <CheckBox
                        android:id="@+id/chkAcceptPolicy"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/saca3a5sw1cr3bffffff"
                        android:orientation="vertical"></CheckBox>

                    <TextView
                        android:id="@+id/txtPolicy"
                        android:layout_width="238dp"
                        android:layout_height="36dp"
                        android:text="By continuing you accept our Privacy Policy and Term of Use"
                        android:textColor="#ACA3A5"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cr99lr270cc8fed6b50f6"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingVertical="18dp">


                <TextView
                    android:id="@+id/rlg91yq79dmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/rightLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/leftLine"
                    android:layout_width="141dp"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/rjgal7d4ny98"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or"
                    android:textColor="#1D1517"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/rb6y5u5242xw"
                    android:layout_width="140dp"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="41dp"
                android:text="Already have an account? Login"
                android:textColor="#1D1517"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>