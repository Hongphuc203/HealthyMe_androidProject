<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="#FFFFFF"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<ScrollView 
		android:id="@+id/rkk5jueinfcm"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@drawable/cr40bffffff">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/r8rl0m4b3a86"
				android:layout_width="match_parent"
				android:layout_height="406dp"
				android:layout_marginBottom="64dp"
				android:src="@mipmap/ic_launcher"
				android:scaleType="fitXY"
			/>
			<LinearLayout
				android:id="@+id/r74yeuatjy2e"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="128dp"
				android:layout_marginHorizontal="30dp"
				android:orientation="vertical">
				<TextView
					android:id="@+id/r99xqzibsfx4"
					android:textColor="#1D1517"
					android:textSize="24sp"
					android:textStyle="bold"
					android:layout_marginBottom="15dp"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Track Your Goal"
				/>
				<TextView
					android:id="@+id/ro9j7n6bpuvt"
					android:textColor="#B6B4C1"
					android:textSize="14sp"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:text="Don't worry if you have trouble determining your goals, We can help you determine your goals and track your goals"
				/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/rlxyim0rdes8"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="end"
				android:layout_marginBottom="40dp"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/btnNext1"
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:clickable="true"
					android:focusable="true"
					android:layout_marginEnd="30dp"
					android:scaleType="fitXY"
					android:src="@mipmap/ic_launcher" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
